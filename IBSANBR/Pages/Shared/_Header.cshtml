            <div class="ui flowing popup bottom left transition hidden">
                <div class="ui grid">
                    <div class="ui column" style="min-width:200px;">
                        <h4 class="ui header">Menu</h4>
                        <div class="ui link list">
                        </div>
                    </div>
                </div>
            </div>
            <!-- Titulo -->
            <div style="display: flex; flex-grow: 8;padding-left: 20px;">
                <h2 style="margin: 0;">
                    <span style="color:#00ADFF;">IBSan</span><span style="color:#339B3d;">Brasil</span>
                </h2>
            </div>
            <!-- Usuário -->
