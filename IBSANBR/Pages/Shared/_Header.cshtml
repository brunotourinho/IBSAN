@using IBSANBR.Extensions

<div style="display: flex; background-color: #fff;box-shadow: inset 0 0 0 #dadce0, inset 0 0 0 #dadce0, 0 1px 2px 0 rgba(60,64,67,.3), 0 1px 3px 1px rgba(60,64,67,.15)">
    <div class="ui grid container" style="padding: 1em !important;min-width: 768px;">
        <div style="display:flex; flex-grow: 1; flex-direction: row; justify-content: flex-start; align-items: center; height: 48px; padding: 0 !important;">
            <!-- Botão -->
            <div class="ui icon top left pointing dropdown custom small button">
                <i class="sidebar icon"></i>
            </div>
